# ===================================
# Django Settings
# ===================================
# Generate a secure secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=False

# Enable SSL redirect in production (Render, Heroku, etc.)
ENABLE_SSL=True

# Comma-separated list of allowed hosts (e.g., yourdomain.com,.onrender.com)
ALLOWED_HOSTS=.onrender.com,yourdomain.com

# ===================================
# Database Configuration
# ===================================
# Local Development (PostgreSQL)
DB_NAME=zoo_management
DB_USER=zoo_admin
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5433

# Production: Use DATABASE_URL instead (Render provides this automatically)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# ===================================
# Cloudinary Media Storage
# ===================================
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===================================
# Email Configuration (Optional)
# ===================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ===================================
# Security Settings (Production)
# ===================================
# Uncomment these for production deployments
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ===================================
# Notes for Deployment
# ===================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control (already in .gitignore)
# 3. For Render deployment, set these in the Render dashboard
# 4. Generate a new SECRET_KEY for production
# 5. Set DEBUG=False and ENABLE_SSL=True in production
